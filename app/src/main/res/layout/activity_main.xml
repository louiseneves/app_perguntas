<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="38dp"
    tools:layout_editor_absoluteY="-53dp"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="882dp"
            android:layout_height="78dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="39dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="-44dp"
            android:layout_marginBottom="30dp"
            android:text="Perguntas BÃ­blicas"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/perguntaTextView"
            android:layout_width="324dp"
            android:layout_height="266dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="45dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/criarPerguntaButton"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perguntaTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="104dp"
            android:text="Criar"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perguntaTextView" />

        <Button
            android:id="@+id/mostrarRespostaButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perguntaTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="145dp"
            android:text="Resposta"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/perguntaTextView" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="-31dp"
            android:layout_marginEnd="14dp"
            app:icon="@drawable/baseline_arrow_forward_ios_24" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="-31dp"
            app:icon="@drawable/baseline_arrow_back_ios_24" />

        <Button
            android:id="@+id/deletar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/perguntaTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="311dp"
            android:layout_marginTop="145dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            app:icon="@drawable/baseline_delete_24"
            app:iconSize="34dp" />

    </RelativeLayout>